<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#E6F0FF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">9pt</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/component_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/component_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/component_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/component_vertical_margin</item>
    </style>

    <style name="ButtonStyle.Orange">
        <item name="android:background">#FF6600</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ButtonStyle.LOrange">
        <item name="android:background">#FFD1B2</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
